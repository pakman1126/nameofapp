<br>

<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row" data-product-id="<%= @product.id %>">
    <div class="col-md-6">
      <p>
        <strong>Image url:</strong>
        <%= image_tag(@product.image_url, class: "img-responsive img-zoom", width: "500", data_zoom_images:@product.image_url) %>
      </p>
    </div>

    <div class="col-md-6">
      <% cache @product do %>
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Color:</strong>
          <%= @product.color %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @product.price %>
        </p>
      <% end %>

      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>" id="average-rating"></div> </p>

      <p>
        <%= form_with(url: '/payments/create') do |form| %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <%= hidden_field_tag(:product_id, @product.id) %>
        <% end %>
      </p>
    </div>
  </div>
</div>

<h6>Views:</h6>
  <span class="badge badge-pill badge_warning">
    <%= @product.views %>
  </span>
<h6>Latest reviewer:</h6>
  <span class="badge badge-pill badge_warning">
    <%= @product.get_recent_reviewer %>
  </span>

<br>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
<%= render 'new_comment' %>
<%= render 'comments' %>
